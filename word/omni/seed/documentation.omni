formatting reference:

    // ─────────────────────────────────────────────────────────────────────────
    // PRAGMA PLACEMENT
    // ─────────────────────────────────────────────────────────────────────────

    pragma placement:
        concept "document type identifier"
        purpose "signals transpiler how to process this file"

        format "md":
            position "after YAML front matter closing ---"
            syntax "<!-- #!omni documentation --md -->"
            reason "YAML must be line 1 for linter compliance"

        format "adoc":
            position "before document attributes (typically line 1-3)"
            syntax:
                ////
                #!omni documentation --adoc
                ////
            reason "block comment allows multi-line if needed"

        format "typ":
            position "line 1"
            syntax "// #!omni documentation --typ"
            reason "no front matter required, line comment is clean"

    // ─────────────────────────────────────────────────────────────────────────
    // METADATA STORAGE
    // ─────────────────────────────────────────────────────────────────────────

    metadata storage:
        concept "machine-parseable document identity"
        purpose "enables tooling, validation, indexing"

        format "md":
            syntax "YAML front matter"
            delimiter "---" on line 1 and closing "---"
            example:
                ---
                key: B-word-seed-doc-markdown-base
                title: Document Title
                type: Template
                ---

        format "adoc":
            syntax "document attributes"
            delimiter ":attr: value" pairs
            example:
                :key: B-word-seed-doc-asciidoc-base
                :title: Document Title
                :type: Template

        format "typ":
            syntax "dictionary (#let meta = (...))"
            delimiter "parentheses with key: value pairs"
            example:
                #let meta = (
                    key: "B-word-seed-doc-typst-base",
                    title: "Document Title",
                    type: "Template",
                )

    // ─────────────────────────────────────────────────────────────────────────
    // BLOCK MARKERS
    // ─────────────────────────────────────────────────────────────────────────

    block markers:
        concept "5-block structure delimiters"
        purpose "identifies block boundaries for validation"

        format "md":
            syntax "HTML comment"
            pattern:
                <!-- ═══════════════════════════════════════════════════════════════════════════════
                     BLOCK_NAME
                     ═══════════════════════════════════════════════════════════════════════════════ -->

        format "adoc":
            syntax "comment block"
            pattern:
                ////
                ═══════════════════════════════════════════════════════════════════════════════
                BLOCK_NAME
                ═══════════════════════════════════════════════════════════════════════════════
                ////

        format "typ":
            syntax "line comment"
            pattern:
                // ═══════════════════════════════════════════════════════════════════════════════
                // BLOCK_NAME
                // ═══════════════════════════════════════════════════════════════════════════════

    // ─────────────────────────────────────────────────────────────────────────
    // TEXT FORMATTING
    // ─────────────────────────────────────────────────────────────────────────

    text formatting:

        bold:
            format "md" → "**text**"
            format "adoc" → "*text*"
            format "typ" → "*text*"

        italic:
            format "md" → "*text*" or "_text_"
            format "adoc" → "_text_"
            format "typ" → "_text_"

        bold italic:
            format "md" → "***text***"
            format "adoc" → "*_text_*"
            format "typ" → "*_text_*"

        inline code:
            format "md" → "`code`"
            format "adoc" → "`code`"
            format "typ" → "`code`"

        strikethrough:
            format "md" → "~~text~~"
            format "adoc" → "[line-through]#text#"
            format "typ" → "#strike[text]"

        highlight:
            format "md" → custom (not standard)
            format "adoc" → "#text#"
            format "typ" → "#highlight[text]"

    // ─────────────────────────────────────────────────────────────────────────
    // HEADINGS
    // ─────────────────────────────────────────────────────────────────────────

    headings:

        h1 (document title):
            format "md" → "# Title"
            format "adoc" → "= Title"
            format "typ" → "= Title"

        h2 (major section):
            format "md" → "## Section"
            format "adoc" → "== Section"
            format "typ" → "== Section"

        h3 (subsection):
            format "md" → "### Subsection"
            format "adoc" → "=== Subsection"
            format "typ" → "=== Subsection"

        h4 (minor heading):
            format "md" → "#### Heading"
            format "adoc" → "==== Heading"
            format "typ" → "==== Heading"

    // ─────────────────────────────────────────────────────────────────────────
    // CALLOUTS
    // ─────────────────────────────────────────────────────────────────────────

    callouts:

        note (informational):
            format "md" → "> **Note:** text" or GitHub blockquote
            format "adoc" → "NOTE: text" or "[NOTE]\n====\ntext\n===="
            format "typ" → "#block(fill: rgb(\"#d1ecf1\"), ...)[*Note:* text]"

        tip (recommendation):
            format "md" → "> **Tip:** text"
            format "adoc" → "TIP: text"
            format "typ" → "#block(fill: rgb(\"#d4edda\"), ...)[*Tip:* text]"

        important (critical):
            format "md" → "> **Important:** text"
            format "adoc" → "IMPORTANT: text"
            format "typ" → "#block(fill: rgb(\"#fff3cd\"), ...)[*Important:* text]"

        warning (caution):
            format "md" → "> **Warning:** text"
            format "adoc" → "WARNING: text"
            format "typ" → "#block(fill: rgb(\"#f8d7da\"), ...)[*Warning:* text]"

        caution (danger):
            format "md" → "> **Caution:** text"
            format "adoc" → "CAUTION: text"
            format "typ" → "#block(fill: rgb(\"#f5c6cb\"), ...)[*Caution:* text]"

    // ─────────────────────────────────────────────────────────────────────────
    // NAVIGATION & LINKS
    // ─────────────────────────────────────────────────────────────────────────

    navigation:

        anchor (create):
            format "md" → implicit from heading (## Section → #section)
            format "adoc" → "[[anchor-name]]" or implicit
            format "typ" → "<label-name>" after heading

        anchor (link to):
            format "md" → "[text](#anchor)"
            format "adoc" → "<<anchor-name,text>>" or "xref:anchor-name[text]"
            format "typ" → "#link(<label-name>)[text]"

        external link:
            format "md" → "[text](https://url)"
            format "adoc" → "https://url[text]"
            format "typ" → "#link(\"https://url\")[text]"

        back to top:
            format "md" → "[↑ Back to Top](#document-title)"
            format "adoc" → "<<top,↑ Back to Top>>"
            format "typ" → "#align(right)[#link(<overview>)[↑ Back to Top]]"

    // ─────────────────────────────────────────────────────────────────────────
    // TABLES
    // ─────────────────────────────────────────────────────────────────────────

    tables:

        basic table:
            format "md":
                | Header 1 | Header 2 |
                |----------|----------|
                | Cell 1   | Cell 2   |

            format "adoc":
                |===
                | Header 1 | Header 2
                | Cell 1   | Cell 2
                |===

            format "typ":
                #table(
                    columns: (1fr, 1fr),
                    [*Header 1*], [*Header 2*],
                    [Cell 1], [Cell 2],
                )

        alignment:
            format "md" → "|:---|" (left) "|:---:|" (center) "|---:|" (right)
            format "adoc" → "cols=\"<,^,>\"" or per-cell
            format "typ" → "align: (left, center, right)"

    // ─────────────────────────────────────────────────────────────────────────
    // CODE BLOCKS
    // ─────────────────────────────────────────────────────────────────────────

    code blocks:

        fenced:
            format "md":
                ```language
                code here
                ```

            format "adoc":
                [source,language]
                ----
                code here
                ----

            format "typ":
                ```language
                code here
                ```

    // ─────────────────────────────────────────────────────────────────────────
    // FOOTNOTES
    // ─────────────────────────────────────────────────────────────────────────

    footnotes:
        format "md" → "[^1]: Footnote text" and reference with "[^1]"
        format "adoc" → "footnote:[text]" inline
        format "typ" → "#footnote[text]" inline

    // ─────────────────────────────────────────────────────────────────────────
    // SYMBOLS (commonly used)
    // ─────────────────────────────────────────────────────────────────────────

    symbols:
        checks → "✓ ✗ ✔ ✘ ☑ ☐" (status, completion)
        arrows → "→ ← ↑ ↓ ↔ ⇒ ⟶" (flow, navigation)
        bullets → "• ◦ ▪ ▸ ► ‣" (lists, separators)
        status → "🟢 🟡 🔴 ⚪" (visual indicators)
        separator → "#sym.dot.c" (Typst) or "•" (Unicode)

// ═══════════════════════════════════════════════════════════════════════════
// END FORMATTING REFERENCE
// ═══════════════════════════════════════════════════════════════════════════
