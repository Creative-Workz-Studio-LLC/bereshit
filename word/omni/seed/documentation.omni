// FORMAT DEFINITIONS
// ═══════════════════════════════════════════════════════════════════════════
//
// Executable specification for transpiling this OmniCode documentation
// template to other formats. The transpiler reads this syntax.
//
// When using: #!omni documentation --[format]
// These definitions tell the transpiler HOW to convert each block.
//
// ═══════════════════════════════════════════════════════════════════════════

format definitions:

    format "adoc" for documentation:
        file extension ".adoc"
        derives from "bereshit/word/seed/documentation/B-word-seed-doc-asciidoc-base.adoc"

        pragma mapping:
            "#!omni documentation --adoc" emits:
                open "////"
                emit "#!omni documentation --adoc"
                close "////"

        metadata mapping:
            "this is a [document] for" → ":title:"
            "keyed as" → ":key:"
            "following" → ":type:"
            "classifies as" → ":tags:"
            "derives from" → ":derives_from:"
            "strictness is" → ":strictness:"
            "grounded in: scripture" → ":biblical_foundation:"
            "authored by: architect" → ":author:"
            "authored by: writer" → ":authors:"
            "created" → ":created:"
            "version" → ":version:"
            "modified" → ":updated:"
            "exists to: purpose" → ":purpose:"
            "exists to: design" → ":description:"

        header mapping:
            "visible identity of this document:" → document title section
            "presented as: title" → "= [Title]"
            "presented as: tagline" → "_[tagline]_"
            "indicated by: status" → status badge
            "indicated by: version" → version display
            "navigated through:" → ":toc: left" and anchors

        context mapping:
            "inputs of this document:" → "== Prerequisites" section
            "definitions of this document:" → definition lists
            "infrastructure of this document:" → navigation setup

        content mapping:
            "structure of this document:" → section organization
            "implementation of this document:" → main body content
            "explanations:" → prose sections with examples
            "teachings:" → instructional sections
            "clarifications:" → admonition blocks (NOTE, TIP, CAUTION)
            "interface of this document:" → takeaway callout boxes

        footer mapping:
            "operations of this document:" → verification section
            "policy of this document:" → modification guidelines
            "synthesis of this document:" → references and closing
            "closing note:" → final paragraph with scripture
            "quick reference:" → appendix or summary table

    format "md" for documentation:
        file extension ".md"
        derives from "bereshit/word/seed/documentation/B-word-seed-doc-markdown-base.md"

        pragma mapping:
            // NOTE: Markdown requires YAML front matter on line 1
            // Pragma MUST come AFTER closing --- of front matter
            "#!omni documentation --md" emits:
                position "after YAML front matter closing ---"
                open "<!--"
                emit "#!omni documentation --md"
                close "-->"

        metadata mapping:
            "this is a [document] for" → YAML front matter "title:"
            "keyed as" → YAML front matter "key:"
            "following" → YAML front matter "type:"
            "classifies as" → YAML front matter "tags:"
            "derives from" → YAML front matter "derives_from:"
            "strictness is" → YAML front matter "strictness:"
            "grounded in: scripture" → YAML front matter "biblical_foundation:"
            "authored by: architect" → YAML front matter "authors:" (list)
            "created" → YAML front matter "created:"
            "version" → YAML front matter "version:"
            "modified" → YAML front matter "updated:"
            "exists to: purpose" → YAML front matter "purpose:"

        header mapping:
            "visible identity of this document:" → document title section
            "presented as: title" → "# [Title]"
            "presented as: tagline" → "**[tagline]**"
            "indicated by: status" → "**Status:** [status]"
            "indicated by: version" → version in YAML front matter
            "navigated through:" → markdown anchor links

        context mapping:
            "inputs of this document:" → "## Prerequisites" section
            "definitions of this document:" → "## Definitions" or inline definitions
            "infrastructure of this document:" → navigation links

        content mapping:
            "structure of this document:" → section organization
            "implementation of this document:" → main body content
            "explanations:" → prose sections with examples
            "teachings:" → instructional sections with headers
            "clarifications:" → blockquotes or callout blocks
            "interface of this document:" → summary/takeaway sections

        footer mapping:
            "operations of this document:" → "## References" section
            "policy of this document:" → modification notes if needed
            "synthesis of this document:" → "## References" with links
            "closing note:" → final paragraph with scripture
            "quick reference:" → summary table or quick links

    format "typ" for documentation:
        file extension ".typ"
        derives from "bereshit/word/seed/documentation/B-word-seed-doc-typst-base.typ"

        pragma mapping:
            // NOTE: Typst uses // for line comments
            // Pragma goes on line 1 before any other content
            "#!omni documentation --typ" emits:
                position "line 1"
                emit "// #!omni documentation --typ"

        metadata mapping:
            // Typst stores metadata in a dictionary (#let meta = (...))
            "this is a [document] for" → meta.title
            "keyed as" → meta.key
            "following" → meta.type
            "classifies as" → meta.tags (tuple)
            "derives from" → meta.derives_from
            "strictness is" → meta.strictness
            "grounded in: scripture" → meta.biblical_foundation
            "authored by: architect" → meta.authors (tuple)
            "created" → meta.created
            "version" → meta.version
            "modified" → meta.updated
            "exists to: purpose" → meta.purpose
            "exists to: design" → meta.path

        header mapping:
            "visible identity of this document:" → centered header block
            "presented as: title" → "= [Title]"
            "presented as: tagline" → "*[tagline]*"
            "indicated by: status" → #box(fill: color)[Status: X]
            "indicated by: version" → #box(fill: color)[Version: X.Y.Z]
            "navigated through:" → #link(<label>)[text] navigation

        context mapping:
            "inputs of this document:" → "== Overview" section
            "definitions of this document:" → #table(...) definitions
            "infrastructure of this document:" → #outline() and navigation

        content mapping:
            "structure of this document:" → section organization with labels
            "implementation of this document:" → main body with headings
            "explanations:" → prose with code blocks
            "teachings:" → instructional sections (== and ===)
            "clarifications:" → #block(fill: color)[...] callouts
            "interface of this document:" → takeaway sections

        footer mapping:
            "operations of this document:" → "== References" section
            "policy of this document:" → modification guidelines if needed
            "synthesis of this document:" → reference tables and cross-links
            "closing note:" → centered closing with scripture
            "quick reference:" → #table(...) quick lookup

