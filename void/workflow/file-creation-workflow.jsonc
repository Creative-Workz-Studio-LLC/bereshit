  "core_insights": {
    "boundary_markers": {
      "insight": "Comments are parseable structure, not just for humans",
      "enables": ["grep for location", "sed for extraction", "batch operations", "validation"],
      "glossary_term": "boundary-marker"
    },
    "block_by_block": {
      "insight": "Each block is a unit of work - edit entire block, then move to next",
      "not": ["section-by-section within block", "wholesale across all blocks"],
      "glossary_term": "block-by-block"
    },
    "template_first": {
      "insight": "Never write from scratch - always derive from templates",
      "why": "Templates carry structural DNA"
    },
    "pragma_change": {
      "insight": "Change #!omni template → #!omni document/code/data after copying",
      "why": "Distinguishes templates from implementations"
    }
  },

